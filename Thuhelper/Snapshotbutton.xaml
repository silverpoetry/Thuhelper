<Window x:Class="Thuhelper.Snapshotbutton"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Thuhelper"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        Title="Snapshotbutton" Height="450" Width="800">
    <Grid>
    
        <Ellipse DragOver="Ellipse_DragOver" MouseUp="Ellipse_MouseUp" MouseDown="Ellipse_MouseDown" Fill="Red" Width="40" Height="40" Stroke="AliceBlue" StrokeThickness="4" HorizontalAlignment="Right" VerticalAlignment="Top">
           
        </Ellipse>
        
    </Grid>
</Window>
